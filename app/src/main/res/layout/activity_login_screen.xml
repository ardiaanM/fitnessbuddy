<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_shade_1"
    tools:context=".LoginScreen">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="           Fitness Buddy"
        app:navigationIcon="@drawable/ic_home"
        app:titleTextColor="@color/white"
        />

    <ImageView
        android:id="@+id/profilePic"
        android:layout_width="97dp"
        android:layout_height="74dp"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="41dp"
        android:layout_centerInParent="true"
        android:background="@drawable/profilepic" />

    <TextView
        android:id="@+id/loginInfoTV1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="117dp"
        android:text="username"
        android:background="#2C2B2B"
        android:gravity="center"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/informationTV2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginInfoTV1"
        android:gravity="center"
        android:padding="10dp"
        android:text="Navigate through the menu and choose what you would like to do today."
        android:textColor="@color/white"
        android:textSize="17dp" />

    <LinearLayout
        android:id="@+id/linnearLayoutLogin"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/informationTV2"
        android:orientation="horizontal">




    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonLogout"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linnearLayoutLogin"
        android:layout_marginTop="270dp"
        android:background="@drawable/button_green"
        android:backgroundTint="#FA0404"
        android:layout_centerHorizontal="true"
        android:text="Logout"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

</RelativeLayout>
